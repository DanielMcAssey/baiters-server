{
  "Serilog": {
    "Using": [
      "Serilog.Expressions",
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByExcluding",
                "Args": {
                  "expression": "Scope = 'ChatLog'"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "logs/server-.log",
                  "rollingInterval": "Day",
                  "retainedFileCountLimit": 7
                }
              }
            ]
          }
        }
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "Scope = 'ChatLog'"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "logs/chat-.log",
                  "rollingInterval": "Day",
                  "retainedFileCountLimit": 7
                }
              }
            ]
          }
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "Properties": {
      "ApplicationName": "GLOKON.Baiters.Server"
    }
  },
  "Server": {
    "ListenOn": "0.0.0.0",
    "ListenOnSocket": null,
    "ListenOnNamedPipe": null,
    "UseHsts": false,
    "HttpPort": 8080,
    "HttpsPort": 8081,
    "MaxUploadSize": 100000000,
    "LetsEncrypt": {
      "UseStagingServer": false,
      "Domains": [],
      "EmailAddress": ""
    },
    "SSL": {
      "CertificatePath": null,
      "CertificatePassword": null
    },
    "Authentication": {
      "SteamApplicationKey": null
    }
  },
  "WebFishing": {
    "Admins": [
      76561197988394297
    ],
    "PluginsEnabled": false,
    "ServerName": "My Baiters Server",
    "CommandPrefix": "!",
    "MaxPlayers": 50,
    "JoinType": "Public",
    "JoinMessage": null,
    "Tags": [
      "talkative",
      "quiet",
      "grinding",
      "chill",
      "silly",
      "hardcore",
      "mature",
      "modded"
    ],
    "SaveChalkCanvases": false,
    "Modifiers": {
      "FishChance": 0.50,
      "BirdChance": 0.33,
      "RainChance": 0.25,
      "MeteorChance": 0.01,
      "VoidPortalChance": 0.005,
      "TicksPerSecond": 24,
      "MaxMetal": 7,
      "MaxNpcActors": 50,
      "MaxFish": 30,
      "MaxBird": 8
    },
    "SteamDebug": false
  }
}
